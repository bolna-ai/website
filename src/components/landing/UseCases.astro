---
import { useCases } from "../../data/useCases.json";
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24 scroll-mt-24" id="usecases">
    <div class="max-w-3xl">
      <span class="text-xs font-bold tracking-wide uppercase text-zinc-500"
        >Use cases</span
      >
      <p class="mt-8 text-4xl font-semibold tracking-tight text-zinc-900">
        From sales pitch to conducting interviews
        <span class="md:block md:text-zinc-500">
          we have everything covered for you.</span
        >
      </p>
      <p class="mt-4 text-base text-zinc-500">
        You can check out the following use cases
      </p>
    </div>

    <ol
      role="list"
      class="grid mt-12 lg:mt-14 grid-cols-1 lg:grid-cols-2 gap-2">
      {
        useCases.map((template) => (
          <>
            <li class="bg-audio p-8 rounded-3xl">
              <div class="sm:flex">
                <div class="mb-4 flex-shrink-0 sm:mb-0 sm:mr-4">
                  <img
                    class="h-32 w-full rounded-xl object-cover bg-center sm:w-32"
                    src={template.image}
                    alt={template.name}
                  />
                </div>
                <div>
                  <h4 class="text-lg font-semibold text-zinc-900">
                    {template.name}
                  </h4>
                  <p class="mt-1 text-sm text-zinc-500">
                    {template.episode} {template.season}
                  </p>
                  <p class="mt-2 text-sm text-zinc-600">
                    {template.description}
                  </p>
                </div>
              </div>

              <div class=" mt-8">
                <audio controls class="w-full">
                  <source
                    src={template.audio}
                    type="audio/mpeg"
                  />
                </audio>
              </div>
            </li>
          </>
        ))
      }
    </ol>
  </div>
</section>
